@model ServiceTracker.Models.Committees

<h2>Edit @Model.Name</h2>

<div>    
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input type="text" asp-for="Name" readonly class="form-control-plaintext">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input type="text" asp-for="Description" readonly class="form-control-plaintext">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Term" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
        <input type="text" asp-for="Term" readonly class="form-control-plaintext">
        </div>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit Details</a>
    </div>
</div>
